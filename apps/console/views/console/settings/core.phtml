<!-- EXTEND: core.console WITH settings.core AND initiate -->
<lazyload
    src="views/console/settings/js/core.js"
    instantiate="settings.core"
    extend="console"
    callback="core.console.settings.core.init"
    context="window"/>
<h4>
    <i uk-icon="icon: settings"/>
    <span> HeEPP Settings</span>
</h4>
<core.form
    id="core-settings-form"
    method="post"
    action="Console.Settings/saveSettings/console.settings.core">

    <toggle.switch
        theme="win10"
        name="useSockets"
        id="useSockets"
        class="toggle-switch"
        value="On"
        check="${console.settings.core.useSockets.key_value}"
        label="Enable Web-Sockets"
        hint="Not compatible with your browser"/>

    <!--
