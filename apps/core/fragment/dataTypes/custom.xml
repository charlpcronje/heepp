<?xml version="1.0" encoding="UTF-8"?>
<root>
    <!-- 
        #################### CUSTOM Data Types ####################
        These are data types not part of any standard and is specific to a FusedObject.
        
        There are no specific restrictions and are only limited to the actual 
        restrictions. These data types can extend other data types for their
        restrictions
    -->
    
    <image
        alias="img"
        extends="string"
        restrictions="width,height,maxWidth,minWidth,maxHeight,minHeight,maxFileSize,minFileSize,minDPI,maxDPI,dpi,allowedExtension,disAllowedExtension"/>
    
    <telephoneNumber
        alias="telephone,tel,fax,cell,mobile"
        extends="number"
        restrictions="countryCode,cityCode"/>
    
    <emailAddress
        alias="email"
        extends="string"
        restrictions="allowedDomain,disAllowedDomain,allowedTopLevelDomain,disAllowedTopLevelDomain"/>
    
    <password
        alias="pass"
        extends="string"/>
    
    <passwordConfirm
        alias="passConfirm,passwordConf,passConf"
        extends="string"/>
</root>
